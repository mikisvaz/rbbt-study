require 'rubygems'

require 'rake'

require 'jeweler'
Jeweler::Tasks.new do |gem|
  # gem is a Gem::Specification... see http://docs.rubygems.org/read/chapter/20 for more options
  gem.name = "rbbt-study"
  gem.homepage = "http://github.com/mikisvaz/rbbt-study"
  gem.license = "MIT"
  gem.summary = %Q{Genomic study entity}
  gem.description = %Q{This gem add the study entity with suport for NGS, Microarray and other types of data}
  gem.email = "miguel.vazquez@cnio.es"
  gem.authors = ["Miguel Vazquez"]

  gem.files = Dir['lib/**/*.rb', 'share/**/*' ]
  # dependencies defined in Gemfile
  gem.license = "MIT"
end
Jeweler::RubygemsDotOrgTasks.new

